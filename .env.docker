# =============================================================
# HireAI - Docker Environment Configuration
# =============================================================
# Copy this file to .env when using Docker

# -------------------------------------------------------------
# DATABASE (Docker Configuration)
# -------------------------------------------------------------
# Use 'postgres' as hostname (Docker service name)
DATABASE_URL=postgresql://postgres:postgres@postgres:5432/hire_db

# Optional: Customize database credentials
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=hire_db

# -------------------------------------------------------------
# LLM PROVIDER
# -------------------------------------------------------------
LLM_PROVIDER=gemini

# Gemini API Key (get from https://aistudio.google.com/apikey)
GEMINI_API_KEY=your_gemini_api_key_here

# OpenAI API Key (if using OpenAI)
OPENAI_API_KEY=your_openai_api_key_here

# -------------------------------------------------------------
# PLATFORM CREDENTIALS (For Automation)
# -------------------------------------------------------------
INTERNSHALA_EMAIL=your_internshala_email
INTERNSHALA_PASSWORD=your_internshala_password

LINKEDIN_EMAIL=
LINKEDIN_PASSWORD=

# -------------------------------------------------------------
# SERVER CONFIGURATION
# -------------------------------------------------------------
BACKEND_PORT=3000
NODE_ENV=development

# Comma-separated list of allowed CORS origins
CORS_ORIGIN=http://localhost:5173
LOG_LEVEL=info

# Frontend API URL (for production builds)
VITE_API_URL=http://localhost:3000

# -------------------------------------------------------------
# EMBEDDING CONFIGURATION
# -------------------------------------------------------------
EMBEDDING_MODEL=text-embedding-3-small
EMBEDDING_DIMENSION=1536
